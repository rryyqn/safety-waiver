generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guardian {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?   
  dob      DateTime?
  phone    String?
  waiver   Waiver?
  children Child[] 

  @@index([name, phone])
}

model Child {
  id         Int       @id @default(autoincrement())
  name       String?
  dob        DateTime?
  guardianId Int
  guardian   Guardian  @relation(fields: [guardianId], references: [id])
}

model Waiver {
  id          Int        @id @default(autoincrement())
  guardianId  Int        @unique
  guardian    Guardian   @relation(fields: [guardianId], references: [id])
  submittedAt DateTime? // This tells us if it's a draft
  agreement   Agreement?

  @@index([submittedAt])
}

model Agreement {
  id               Int      @id @default(autoincrement())
  acceptedAt       DateTime @default(now())
  rulesAgreement   Boolean
  risksAgreement   Boolean
  medicalAgreement Boolean
  signature        String

  waiverId Int    @unique
  waiver   Waiver @relation(fields: [waiverId], references: [id])
}
